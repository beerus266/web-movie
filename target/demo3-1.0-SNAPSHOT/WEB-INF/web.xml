<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file>
<!--        <welcome-file>index.htm</welcome-file>-->
<!--        <welcome-file>login.jsp</welcome-file>-->
<!--        <welcome-file>register.jsp</welcome-file>-->
<!---->
<!---->
<!--        <welcome-file>default.html</welcome-file>-->
<!--        <welcome-file>default.htm</welcome-file>-->
<!--        <welcome-file>default.jsp</welcome-file>-->
    </welcome-file-list>

<!--    SERVLET -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailMovieServlet</servlet-name>
        <servlet-class>Controller.DetailMovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchMovieServlet</servlet-name>
        <servlet-class>Controller.SearchMovieController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentMovieServlet</servlet-name>
        <servlet-class>Controller.CommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WishListMovieServlet</servlet-name>
        <servlet-class>Controller.WishListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToListServlet</servlet-name>
        <servlet-class>Controller.AddToListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromListServlet</servlet-name>
        <servlet-class>Controller.RemoveFromList</servlet-class>
    </servlet>

<!--    SERVLET MAPPING -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailMovieServlet</servlet-name>
        <url-pattern>/detail-movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchMovieServlet</servlet-name>
        <url-pattern>/search-movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentMovieServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WishListMovieServlet</servlet-name>
        <url-pattern>/wishlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>Controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToListServlet</servlet-name>
        <url-pattern>/add-to-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFromListServlet</servlet-name>
        <url-pattern>/remove-from-list</url-pattern>
    </servlet-mapping>
</web-app>